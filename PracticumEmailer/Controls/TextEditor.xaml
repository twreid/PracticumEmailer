<UserControl x:Class="PracticumEmailer.Controls.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:PracticumEmailer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="800" Width="800">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="800">
        <StackPanel Orientation="Horizontal" Height="60">
            <xc:RichTextBoxFormatBar Target="{Binding ElementName=editor}"/>
            <ComboBox x:Name="cmbFiles" SelectionChanged="cmbFiles_SelectionChanged_1" Width="100"/>
            <Button Content="Save" Click="Button_Click_1"/>
        </StackPanel>
        <xc:RichTextBox x:Name="editor" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="800" Width="800">
            <xc:RichTextBox.TextFormatter>
                <xc:XamlFormatter/>
            </xc:RichTextBox.TextFormatter>
       </xc:RichTextBox>
    </StackPanel>
</UserControl>
