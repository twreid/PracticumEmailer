<Window x:Class="PracticumEmailer.EditMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        Title="EditMessages" Height="300" Width="300">
    <Grid>
        <RichTextBox HorizontalAlignment="stretch" Margin="3,3,0,0" Name="rtbText" VerticalAlignment="stretch">
            <extToolkit:RichTextBoxFormatBarManager.FormatBar>
                <extToolkit:RichTextBoxFormatBar />
            </extToolkit:RichTextBoxFormatBarManager.FormatBar>
        </RichTextBox>
    </Grid>
</Window>
